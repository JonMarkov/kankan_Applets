page {
  background: #121212;
}

/* H1 列表筛选部分 */

.list_title {
  display: flex;
  flex-direction: row;
}

/* 列表筛选小板块内容 */

.list_title_screen {
  width: 25%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0px;
}

/* 列表小版块边框 */

.left_border {
  border-left: 1rpx solid #fff;
}

/* 列表小版块标题 */

.list_title_screen text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  letter-spacing: 0px;
}

/* 列表小版块图标 */

.list_title_screen image {
  width: 15rpx;
  height: 33rpx;
  margin-left: 10rpx;
}

/* 列表小版块是否选中状态--显示样式 */

.show_icon {
  display: block;
}

/* 列表小版块是否选中状态--隐藏状态 */

.hide_icon {
  display: block;
}

/* H1 列表列表部分 */

.list_content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

/* 单个列表部分 */

.list_content_box {
  width: 46%;
  padding: 0% 2% 3% 2%;

}

/* 封面图盒子 */

.list_content_box_img {
  width: 100%;
}

/* 封面图 */

.list_content_box_img image {
  width: 100%;
}

/* 微剧内容部分 */

.list_content_box_text {
  display: flex;
  flex-direction: column;
}

/* 微剧标题 */

.text_title {
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
}

/* 微剧更新状态-续集数 */

.text_content {
  color: #fff;
  opacity: 0.5;
  font-size: 24rpx;
  line-height: 35rpx;
}

.list_content_box_handle {
  display: flex;
  flex-direction: row;
}

/* 观看数 */

.watch_box {
  width: 100%;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  line-height: 34rpx;
}

/* 观看书图标 */

.watch_box image {
  width: 60rpx;
  height: 60rpx;
}

/* 点赞数 */

.like_box {
  width: 100%;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  line-height: 34rpx;
}

/* 点赞数图标 */

.like_box image {
  width: 60rpx;
  height: 60rpx;
}
